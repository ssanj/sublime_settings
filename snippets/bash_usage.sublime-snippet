  <content><![CDATA[
YELLOW='\033[1;33m'
RESET='\033[0m' # RESET

if [ "\$#" -ne 1 ]; then
  echo -e "\${YELLOW}${1:Description of program}\${RESET}"
  echo "usage: \$(basename \$0) ${2:ARGUMENTS}"
  exit 1
fi
]]></content>
